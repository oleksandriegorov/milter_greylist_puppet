<% $whlips.each |String $ip| { -%>
  <%= $ip%> \
<% } -%>
}
<% } -%>


<% unless empty($whlcountries) { -%>
list "whitelisted_countries" geoip { \
<% $whlcountries.each |String $countrycode| { -%>
  "<%= $countrycode %>" \
<% } -%>
}
<% } -%>


